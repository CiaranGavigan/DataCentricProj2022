<!DOCTYPE html>
<html>

<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <h1>EmployeesMDB</h1>

    <!-- Button to add a lecturer-->
    <button onclick="window.location.href='/addEmployeeMDB'">Add Employee</button><br><br>

    <!-- Create a table to display data -->
    <table>
        <tr>
            <!-- Table Headers -->
            <th>EID</th>
            <th>Phone</th>
            <th>Email</th>
            
        </tr>
        <!-- Display using a forEach -->
        <% employees.forEach((employees) => { %>
            <tr>
                <!-- Display data here -->
                <td><%= employees._id %></td>
                <td><%= employees.phone %></td>
                <td><%= employees.email %></td>
               
                
            </tr>
        <% }) %>
    </table>

    <!-- Home button -->
    <br><button onclick="window.location.href='/'">Home</button>
</body>

</html>